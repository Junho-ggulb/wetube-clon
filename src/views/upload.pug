extends base

block content
    div 
        button#startBtn Start Recording
    if errorMessage 
        span=errorMessage
    form(method="post", enctype="multipart/form-data")
        label(for="video") Video File 
        input(type="file", accept="video/*", required, id="video" name="video")
        input(name="title" type="text" maxlength=80 placeholder="Title" required)
        input(name="description" type="text" minlength=20 placeholder="Description" required)
        input(name="hashtags" type="text" placeholder="Hashtags, separated by comma" required)
        input(type="submit", value="Upload Video")
block scripts 
    script(src="/assets/js/recorder.js")